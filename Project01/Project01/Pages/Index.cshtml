@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>

    @if (User.Identity.IsAuthenticated)
    {
        <p>You are logged in as: @User.Identity.Name</p>

        @if (User.IsInRole("Admin"))
        {
            <p>Welcome, Administrator! You have the power to approve/reject and edit/delete any contact data.</p>
        }
        else if (User.IsInRole("Manager"))
        {
            <p>Welcome, Manager! You can approve or reject contact data, and only approved contacts are visible to users.</p>
        }
        else
        {
            <p>Welcome, Registered User! You can view all approved data and edit/delete your own data.</p>
        }
    }
    else
    {
        <p>Please <a href="/Identity/Account/Login">log in</a> to access the contact information.</p>
    }
</div>
